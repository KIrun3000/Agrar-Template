---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import Features from '~/components/widgets/Features.astro';

export function getStaticPaths() {
  return [
    { params: { slug: 'musterland' }, props: { land: '[LAND_NAME]', intro: '[LAND_INTRO]' } },
  ];
}

const { land = '[LAND_NAME]', intro = '[LAND_INTRO]' } = Astro.props;

const metadata = {
  title: `Land ${land}`,
  description: intro,
};
---

<Layout metadata={metadata}>
  <Hero
    id="land-hero"
    image={{ src: '~/assets/images/placeholders/placeholder-region.jpg', alt: '[LAND_BILD]' }}
    actions={[]}
  >
    <Fragment slot="title">Agrarimmobilien in {land}</Fragment>
    <Fragment slot="subtitle">{intro}</Fragment>
  </Hero>

  <Content
    id="recht"
    title="Rechtliche Besonderheiten"
    items={[{ title: '[RECHT_TITEL]', description: '[RECHT_TEXT]' }]}
  >
    <Fragment slot="content">[RECHT_TEXT_LANG]</Fragment>
  </Content>

  <Content
    id="markt"
    title="Marktübersicht"
    items={[{ title: '[MARKT_TITEL]', description: '[MARKT_TEXT]' }]}
  >
    <Fragment slot="content">[MARKT_TEXT_LANG]</Fragment>
  </Content>

  <Features
    id="land-objekte"
    tagline="Objekte"
    title={`Objekte in ${land}`}
    subtitle="[LAND_OBJEKTE_TEXT]"
    columns={3}
    items={[
      { title: '[OBJEKT_1]', description: '[KURZTEXT_1]', icon: 'tabler:building', callToAction: { text: 'Details', href: '/angebote/[slug]' } },
      { title: '[OBJEKT_2]', description: '[KURZTEXT_2]', icon: 'tabler:map', callToAction: { text: 'Details', href: '/angebote/[slug]' } },
      { title: '[OBJEKT_3]', description: '[KURZTEXT_3]', icon: 'tabler:plant-2', callToAction: { text: 'Details', href: '/angebote/[slug]' } },
    ]}
  />

  <Content
    id="verkaeufer"
    title="Hinweise für Verkäufer"
    items={[{ title: '[VERKAEUFER_TITLE]', description: '[VERKAEUFER_TEXT]' }]}
  >
    <Fragment slot="content">[VERKAEUFER_TEXT_LANG]</Fragment>
  </Content>

  <Content
    id="kaeufer"
    title="Hinweise für Käufer"
    items={[{ title: '[KAEUFER_TITLE]', description: '[KAEUFER_TEXT]' }]}
  >
    <Fragment slot="content">[KAEUFER_TEXT_LANG]</Fragment>
  </Content>
</Layout>
