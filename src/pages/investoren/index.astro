---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import MediaCardsLeft from '~/components/sections/MediaCardsLeft.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features from '~/components/widgets/Features.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Für Investoren – AstroWind Agrar Template',
  description: '[INVESTOREN_INTRO]',
};

const gesucheItems = [
  {
    code: 'GS-2001',
    badge: 'Aktiv',
    imageSrc: '/images/stock/acker.webp',
    imageAlt: 'Ackerland gesucht',
    headline: 'Ackerland ab 50 ha',
    meta: 'Regionen: Brandenburg, Mecklenburg-Vorpommern, Sachsen-Anhalt · langfristiger Anlagehorizont',
    ctaLabel: 'Profil anfragen',
    href: '/kontakt?utm_source=gesuche',
  },
  {
    code: 'GS-2002',
    badge: 'Aktiv',
    imageSrc: '/images/stock/wald.webp',
    imageAlt: 'Waldflächen gesucht',
    headline: 'Waldflächen 30–150 ha',
    meta: 'Mischwald bevorzugt · Bestandsalter flexibel · ruhige Lagen',
    ctaLabel: 'Profil anfragen',
    href: '/kontakt?utm_source=gesuche',
  },
  {
    code: 'GS-2003',
    badge: 'Aktiv',
    imageSrc: '/images/stock/wiese.webp',
    imageAlt: 'Jagd- und Pachtgesuch',
    headline: 'Eigenjagd / Jagdpacht',
    meta: 'Nord- und Ostdeutschland · arrondierte Reviere gesucht',
    ctaLabel: 'Profil anfragen',
    href: '/kontakt?utm_source=gesuche',
  },
];
---

<Layout metadata={metadata}>
  <Hero id="investoren" actions={[{ text: 'Suchprofil hinterlegen', href: '/kontakt' }]}>
    <Fragment slot="title">Für Investoren</Fragment>
    <Fragment slot="subtitle">[INVESTOREN_INTRO]</Fragment>
  </Hero>

  <MediaCardsLeft
    id="gesuche"
    eyebrow="Gesuche"
    title="Aktuelle Gesuche"
    description="Hinterlegte Suchprofile von Investoren und Familiengesellschaften. Diskret, strukturiert und mit klaren Kriterien."
    items={gesucheItems}
  />

  <Steps
    id="prozess"
    tagline="Investmentprozess"
    title="Investmentprozess"
    items={[
      { title: '[INV_STEP_1_TITLE]', description: '[INV_STEP_1_TEXT]', icon: 'tabler:number-1' },
      { title: '[INV_STEP_2_TITLE]', description: '[INV_STEP_2_TEXT]', icon: 'tabler:number-2' },
      { title: '[INV_STEP_3_TITLE]', description: '[INV_STEP_3_TEXT]', icon: 'tabler:number-3' },
      { title: '[INV_STEP_4_TITLE]', description: '[INV_STEP_4_TEXT]', icon: 'tabler:number-4' },
    ]}
  />

  <Features
    id="assetklassen"
    tagline="Assetklassen"
    title="Assetklassen"
    subtitle="[ASSETKLASSEN_TEXT]"
    columns={3}
    items={[
      { title: '[ASSET_1]', description: '[ASSET_1_TEXT]', icon: 'tabler:building-community' },
      { title: '[ASSET_2]', description: '[ASSET_2_TEXT]', icon: 'tabler:tractor' },
      { title: '[ASSET_3]', description: '[ASSET_3_TEXT]', icon: 'tabler:leaf' },
      { title: '[ASSET_4]', description: '[ASSET_4_TEXT]', icon: 'tabler:plant-2' },
      { title: '[ASSET_5]', description: '[ASSET_5_TEXT]', icon: 'tabler:chart-bar' },
      { title: '[ASSET_6]', description: '[ASSET_6_TEXT]', icon: 'tabler:map' },
    ]}
  />

  <FAQs
    id="faq"
    tagline="FAQ"
    title="Fragen von Investoren"
    subtitle="[INV_FAQ_TEXT]"
    items={[
      { title: '[INV_FAQ_1_Q]', description: '[INV_FAQ_1_A]' },
      { title: '[INV_FAQ_2_Q]', description: '[INV_FAQ_2_A]' },
      { title: '[INV_FAQ_3_Q]', description: '[INV_FAQ_3_A]' },
      { title: '[INV_FAQ_4_Q]', description: '[INV_FAQ_4_A]' },
      { title: '[INV_FAQ_5_Q]', description: '[INV_FAQ_5_A]' },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <CallToAction
    id="cta"
    actions={[
      { variant: 'primary', text: 'Suchprofil hinterlegen', href: '/kontakt' },
      { text: 'Angebote ansehen', href: '/angebote' },
    ]}
  >
    <Fragment slot="title">[CTA_INVESTOREN_TITLE]</Fragment>
    <Fragment slot="subtitle">[CTA_INVESTOREN_SUBTITLE]</Fragment>
  </CallToAction>
</Layout>
