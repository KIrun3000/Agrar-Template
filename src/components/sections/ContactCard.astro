---
const { title, description, items = [], note, className = '' } = Astro.props;
---

<div class={`rounded-xl border border-gray-200 dark:border-gray-800 bg-white/80 dark:bg-slate-900/70 p-6 lg:p-8 shadow-sm ${className}`.trim()}>
  {title && <h3 class="text-xl font-semibold text-emerald-950 dark:text-white">{title}</h3>}
  {description && <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">{description}</p>}
  {
    items.length > 0 && (
      <ul class="mt-4 space-y-2 text-sm text-slate-600 dark:text-slate-300">
        {items.map((item) => (
          <li class="flex items-start gap-2">
            <span class="mt-1.5 h-1.5 w-1.5 rounded-full bg-emerald-600 flex-shrink-0" aria-hidden="true"></span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    )
  }
  {note && <p class="mt-4 text-xs text-slate-500 dark:text-slate-400">{note}</p>}
</div>
