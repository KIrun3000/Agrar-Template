---
const { title, description, items = [], note, className = '' } = Astro.props;
---

<div class={`rounded-xl border border-card-border bg-card/85 p-6 lg:p-8 shadow-sm ${className}`.trim()}>
  {title && <h3 class="text-xl font-semibold text-heading">{title}</h3>}
  {description && <p class="mt-2 text-sm text-muted">{description}</p>}
  {
    items.length > 0 && (
      <ul class="mt-4 space-y-2 text-sm text-muted">
        {items.map((item) => (
          <li class="flex items-start gap-2">
            <span class="mt-1.5 h-1.5 w-1.5 rounded-full bg-primary flex-shrink-0" aria-hidden="true"></span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    )
  }
  {note && <p class="mt-4 text-xs text-muted">{note}</p>}
</div>
