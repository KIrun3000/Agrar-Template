---
const { eyebrow, title, description, align = 'left', titleAs = 'h2', size = 'md', className = '' } = Astro.props;
const isCenter = align === 'center';
const alignClass = isCenter ? 'text-center' : 'text-left';
const titleSize =
  size === 'lg' ? 'text-4xl sm:text-5xl lg:text-6xl' : size === 'sm' ? 'text-2xl sm:text-3xl' : 'text-3xl sm:text-4xl';
const TitleTag = titleAs;
---

<div class={`space-y-3 ${alignClass} ${className}`.trim()}>
  {eyebrow && <p class="text-sm font-semibold uppercase tracking-[0.2em] text-secondary">{eyebrow}</p>}
  {title && <TitleTag class={`${titleSize} font-semibold text-heading`}>{title}</TitleTag>}
  {
    description && (
      <p class={`text-base sm:text-lg text-muted ${isCenter ? 'mx-auto max-w-3xl' : 'max-w-3xl'}`}>
        {description}
      </p>
    )
  }
</div>
