---
const { items = [], columns = 3, className = '' } = Astro.props;
const columnClass = columns === 4 ? 'lg:grid-cols-4' : columns === 3 ? 'lg:grid-cols-3' : 'lg:grid-cols-2';
---

<div class={`grid gap-4 sm:grid-cols-2 ${columnClass} ${className}`.trim()}>
  {
    items.map((item, index) => (
      <div class="rounded-xl border border-card-border bg-card p-5 shadow-sm">
        <p class="text-xs font-mono text-muted">{String(index + 1).padStart(2, '0')}</p>
        <h3 class="mt-2 text-lg font-semibold text-heading">{item.title}</h3>
        <p class="mt-2 text-sm text-muted">{item.description}</p>
      </div>
    ))
  }
</div>
