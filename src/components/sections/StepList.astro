---
const { items = [], columns = 3, className = '' } = Astro.props;
const columnClass = columns === 4 ? 'lg:grid-cols-4' : columns === 3 ? 'lg:grid-cols-3' : 'lg:grid-cols-2';
---

<div class={`grid gap-4 sm:grid-cols-2 ${columnClass} ${className}`.trim()}>
  {
    items.map((item, index) => (
      <div class="rounded-xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-slate-900 p-5 shadow-sm">
        <p class="text-xs font-mono text-slate-500">{String(index + 1).padStart(2, '0')}</p>
        <h3 class="mt-2 text-lg font-semibold text-emerald-950 dark:text-white">{item.title}</h3>
        <p class="mt-2 text-sm text-slate-600 dark:text-slate-300">{item.description}</p>
      </div>
    ))
  }
</div>
