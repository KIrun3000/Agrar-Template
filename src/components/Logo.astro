---
import { SITE } from 'astrowind:config';
import { getActiveBrand } from '~/config/activeBrand';

const { brand } = getActiveBrand();
const brandName = brand?.name || SITE?.name;
const logoSrc = brand?.assets?.logo?.svg || brand?.assets?.logo?.png;
---

{
  logoSrc ? (
    <img src={logoSrc} alt={brandName} class="h-8 w-auto" loading="eager" />
  ) : (
    <span class="self-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold text-heading whitespace-nowrap">
      {brandName}
    </span>
  )
}
