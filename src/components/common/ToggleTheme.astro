---
import { Icon } from 'astro-icon/components';

import { UI } from 'astrowind:config';

export interface Props {
  label?: string;
  class?: string;
  iconClass?: string;
  iconName?: string;
}

const {
  label = 'Toggle between Dark and Light mode',
  class:
    className = 'text-muted hover:bg-surface focus:outline-none focus:ring-4 focus:ring-ring/30 rounded-lg text-sm p-2.5 inline-flex items-center',
  iconClass = 'w-6 h-6',
  iconName = 'tabler:sun',
} = Astro.props;
---

{
  !(UI.theme && UI.theme.endsWith(':only')) && (
    <button type="button" class={className} aria-label={label} data-aw-toggle-color-scheme>
      <Icon name={iconName} class={iconClass} />
    </button>
  )
}

<script
  is:inline
  define:vars={{
    themeMode: UI.theme || 'system',
  }}
>
  // Fallback toggle handler in case BasicScripts is not loaded for this page view
  document.addEventListener(
    'click',
    (event) => {
      if (typeof window !== 'undefined' && window.basic_script) return; // BasicScripts already handles toggling
      const target = event.target;
      if (!target) return;
      const btn = target.closest?.('[data-aw-toggle-color-scheme]');
      if (!btn) return;
      if (themeMode.endsWith(':only')) return;

      event.preventDefault();
      const root = document.documentElement;
      const isDark = root.classList.toggle('dark');
      localStorage.theme = isDark ? 'dark' : 'light';
    },
    { passive: true }
  );
</script>
