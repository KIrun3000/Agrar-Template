---
import FormContainer from '~/components/ui/Form.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Contact as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  info = await Astro.slots.render('info'),
  inputs,
  textarea,
  disclaimer,
  button,
  description,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const hasInfo = Boolean(info);
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  {
    inputs && (
      <>
        {hasInfo ? (
          <div class="grid gap-6 md:grid-cols-2">
            <div class="rounded-lg border border-card-border bg-card shadow p-4 sm:p-6 lg:p-8">
              <Fragment set:html={info} />
            </div>
            <div class="rounded-lg backdrop-blur border border-card-border bg-card/85 shadow p-4 sm:p-6 lg:p-8 w-full">
              <FormContainer
                inputs={inputs}
                textarea={textarea}
                disclaimer={disclaimer}
                button={button}
                description={description}
              />
            </div>
          </div>
        ) : (
          <div class="flex flex-col max-w-xl mx-auto rounded-lg backdrop-blur border border-card-border bg-card/85 shadow p-4 sm:p-6 lg:p-8 w-full">
            <FormContainer
              inputs={inputs}
              textarea={textarea}
              disclaimer={disclaimer}
              button={button}
              description={description}
            />
          </div>
        )}
      </>
    )
  }
</WidgetWrapper>
