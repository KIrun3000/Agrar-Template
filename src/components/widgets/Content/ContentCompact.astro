---
/**
 * ContentCompact.astro - Minimal spacing variant for concise content
 *
 * Use for: Short text, minimal items, or when space is limited
 * Differences from default: Reduced vertical spacing, tighter layout, smaller text
 */
import type { Content as Props } from '~/types';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import ItemGrid from '~/components/ui/ItemGrid.astro';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  callToAction,
  items = [],
  columns,
  image = await Astro.slots.render('image'),
  isReversed = false,
  isAfterContent = false,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const normalizedImage =
  image && typeof image === 'object'
    ? {
        ...image,
        width: (image as Record<string, unknown>)?.width ?? 1200,
        height: (image as Record<string, unknown>)?.height ?? 800,
      }
    : image;

const normalizedWidth =
  typeof normalizedImage === 'object' && normalizedImage && 'width' in normalizedImage
    ? (normalizedImage as Record<string, unknown>).width
    : 1200;
const normalizedHeight =
  typeof normalizedImage === 'object' && normalizedImage && 'height' in normalizedImage
    ? (normalizedImage as Record<string, unknown>).height
    : 800;
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl mx-auto ${isAfterContent ? 'pt-0 md:pt-0 lg:pt-0' : ''} ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'max-w-xl sm:mx-auto lg:max-w-2xl mb-4',
      title: 'text-3xl md:text-4xl font-bold tracking-tighter mb-2 font-heading',
      subtitle: 'max-w-3xl mx-auto sm:text-center text-lg text-muted',
    }}
  />
  <div class="mx-auto max-w-7xl p-4 md:px-8">
    <div class={`md:flex ${isReversed ? 'md:flex-row-reverse' : ''} md:gap-12`}>
      <div class="md:basis-1/2 self-center">
        {content && <div class="mb-8 text-base text-muted" set:html={content} />}

        {
          callToAction && (
            <div class="mt-[-40px] mb-6 text-primary">
              <Button variant="link" {...callToAction} />
            </div>
          )
        }

        <ItemGrid
          items={items}
          columns={columns}
          defaultIcon="tabler:check"
          classes={{
            container: `gap-y-3 md:gap-y-5`,
            panel: 'max-w-none',
            title: 'text-base font-medium leading-6 text-heading ml-2 rtl:ml-0 rtl:mr-2',
            description: 'text-sm text-muted ml-2 rtl:ml-0 rtl:mr-2',
            icon: 'flex h-6 w-6 items-center justify-center rounded-full bg-primary text-on-primary p-1',
            action: 'text-base font-medium leading-6 text-heading ml-2 rtl:ml-0 rtl:mr-2',
          }}
        />
      </div>
      <div aria-hidden="true" class="mt-8 md:mt-0 md:basis-1/2">
        {
          image && (
            <div class="relative m-auto max-w-4xl">
              {typeof image === 'string' ? (
                <Fragment set:html={image} />
              ) : (
                <Image
                  class="mx-auto w-full rounded-lg bg-surface shadow-lg"
                  width={normalizedWidth as number}
                  height={normalizedHeight as number}
                  widths={[400, 768]}
                  sizes="(max-width: 768px) 100vw, 432px"
                  layout="responsive"
                  {...(normalizedImage ?? {})}
                />
              )}
            </div>
          )
        }
      </div>
    </div>
  </div>
</WidgetWrapper>
